<?xml version="1.0" encoding="UTF-8"?>
<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:6.0 http://www.infinispan.org/schemas/infinispan-config-6.0.xsd"
        xmlns="urn:infinispan:config:6.0">

    <namedCache name="xfTestConfigOneElementInMemory">
        <eviction maxEntries="3"/>
    </namedCache>

    <namedCache name="xfSessionCache">
        <deadlockDetection enabled="true" spinDuration="1221"/>
        <eviction maxEntries="2" strategy="LIRS"/>
        <persistence passivation="true">
            <store class="org.infinispan.persistence.file.SingleFileStore" shared="false" preload="true" fetchPersistentState="true" ignoreModifications="true" purgeOnStartup="true">
                <async enabled="true" threadPoolSize="1" flushLockTimeout="10"/>
                <singleton enabled="true" pushStateWhenCoordinator="true" pushStateTimeout="20"/>
                <properties>
                    <property name="location" value="/tmp/bfCache"/>
                </properties>
            </store>
        </persistence>
        <locking supportsConcurrentUpdates="true"/>
    </namedCache>

    <!--

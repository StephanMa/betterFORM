   <namedCache name="xfTestConfigOneElementInMemory">
        <eviction maxEntries="3"/>
        <loaders passivation="true" shared="false" preload="false">
            <loader class="org.infinispan.loaders.file.FileCacheStore" fetchPersistentState="false" ignoreModifications="false" purgeOnStartup="true" purgeSynchronously="true">
                <properties>
                    <property name="location" value="/tmp/bfCache"/>
                </properties>
            </loader>
        </loaders>
    </namedCache>

    <namedCache name="xfSessionCache" >
        <!-- ##### maximum elements in memory cache are '100' ##### -->
        <eviction strategy="LIRS" maxEntries="100"/>
        <expiration lifespan="-1" maxIdle="-1"/>
        <loaders passivation="true" preload ="false"  shared="false">
            <fileStore location="/tmp/bfCache" streamBufferSize="8192"/>
        </loaders>

    </namedCache>

